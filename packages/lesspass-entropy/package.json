{
  "name": "lesspass-entropy",
  "version": "10.0.0",
  "description": "LessPass module used to generate entropy for password generation",
  "license": "GPL-3.0",
  "author": "Guillaume Vincent <guillaume@oslab.fr>",
  "type": "module",
  "exports": {
    "node": "./dist/index.js",
    "browser": "./dist/index.browser.js",
    "default": "./dist/index.browser.js"
  },
  "browser": {
    "./src/pbkdf2.ts": "./src/pbkdf2.browser.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn clean && tsup",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "lesspass-crypto": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "tsup": [
    {
      "entry": {
        "index.browser": "./src/index.ts"
      },
      "format": [
        "esm"
      ],
      "platform": "browser",
      "dts": true,
      "clean": true
    },
    {
      "entry": [
        "./src/index.ts"
      ],
      "format": [
        "esm"
      ],
      "platform": "node",
      "dts": true,
      "clean": true
    }
  ]
}
